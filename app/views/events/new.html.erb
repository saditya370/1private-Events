<h2>Create your Own Event</h2>

<%= form_with(model: @event) do |form| %>

 <div>
    <%= form.label :event_name, style: "display: block" %>
    <%= form.text_field :event_name %>
  </div>

  <div>
    <%= form.label :event_date, style: "display: block" %>
    <%= form.text_field :event_date %>
    <%= form.hidden_field :user_id, value: current_user.id%>
  </div>

  <div>
    <%= form.label :event_discription, style: "display: block" %>
    <%= form.text_field :event_discription %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>